<div class='blog-container'>
    <h3 align='center'>
        <%= @article.title %>
    </h3>

    <p align='right'>
        <% if @article.user %>
            Posted by <%= @article.user.email %> |
        <% end %>
        <%= link_to 'Edit', edit_article_path %> |
        <%= link_to 'Delete', article_path(@article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
    </p>

    <p align='right'>
        <i><%= @article.post_date %></i>
    </p>

    <p>
    <%= @article.content %>
    </p>

    <h3>Comments</h3>
    <%= render @article.comments %>

    <%= render 'comments/form' %>
</div>