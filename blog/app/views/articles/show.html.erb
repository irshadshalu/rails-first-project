<div class='blog-container'>
    <h3 align='center'>
        <%= @article.title %>
    </h3>

    <p align='right'>
        <% if @article.user %>
            Posted by <%= link_to @article.user.email, user_path(@article.user) %> |
        <% end %>
        <% if current_user and (@article.user == current_user or current_user.is_admin) %>
            <%= link_to 'Edit', edit_article_path %> |
            <%= link_to 'Delete', article_path(@article),
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
        <% end %>
    </p>

    <p align='right'>
        <i><%= @article.post_date %></i>
    </p>

    <p>
    <%= @article.content %>
    </p>
    <% if @article.comments.length > 0 %>
        <h4 class='title'>Comments</h4>
    <% end %>
    <%= render @article.comments %>

    <%= render 'comments/form' %>
</div>