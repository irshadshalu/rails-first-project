<div class='container'>
    <div align='left'>
        <%= link_to 'Home', articles_path %>
    </div>

    <h3> Edit post </h3>

    <%= form_with(model: @article,  local: true) do |f| %>

        <% if @article.errors.any? %>
            <div id="error_explanation">
            <h2>
                <%= pluralize(@article.errors.count, "error") %> prohibited
                this blog from being saved:
            </h2>
            <ul>
                <% @article.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
            </ul>
            </div>
        <% end %>

        <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
        </p>

        <p>
        <%= f.label :content %><br>
        <%= f.text_area :content, cols: "30", rows: "10" %>
        </p>

        <p>
        <%= f.label :post_date %><br>
        <%= f.date_field :post_date %>
        </p>

        <p>
        <%= f.submit %>
        </p>
    <% end %>
</div>
